<?xml version="1.0"?>
<ruleset name="84EM Local Pages">
    <description>Coding standards for 84EM Local Pages Generator</description>

    <!-- Files to check -->
    <file>84em-local-pages.php</file>
    <file>tests</file>

    <!-- Exclude vendor and other directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/tests/fixtures/*</exclude-pattern>

    <!-- Use WordPress coding standards -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        
        <!-- Allow :: for static methods -->
        <exclude name="WordPress.WhiteSpace.OperatorSpacing.NoSpaceAfter"/>
        <exclude name="WordPress.WhiteSpace.OperatorSpacing.NoSpaceBefore"/>
        
        <!-- We use PHP 8.2+ features -->
        <exclude name="PHPCompatibility"/>
    </rule>

    <!-- Set minimum supported WordPress version -->
    <config name="minimum_supported_wp_version" value="6.8"/>

    <!-- Check PHP compatibility -->
    <config name="testVersion" value="8.2-"/>

    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Show sniff codes -->
    <arg value="s"/>
    
    <!-- Use colors -->
    <arg name="colors"/>
</ruleset>